<p id="notice"><%= notice %></p>

<h1>画像投稿画面</h1>

<table class="table">
  <thead>
    <tr>
      <th>内容</th>
      <th>Image</th>
      <th>作成者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.name %></td>
        <td><%= image_tag feed.image.url,size: '100x100' %></td>
        <td ><%= feed.user.name %></td>
        <td><%= link_to 'お気に入り設定', feed %></td>
        <td><%= link_to '編集', edit_feed_path(feed) %></td>
        <td><%= link_to '削除', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '新しい画像を投稿する', new_feed_path %>
