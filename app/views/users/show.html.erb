<h1><%= @user.name %>のページ</h1>
  <p>メールアドレス: <%= @user.email %></p>
  <p id="notice"><%= notice %></p>
  <%#= link_to 'プロフィール画像を選択', edit_user_path(@user) %>
  <p>
    <strong>プロフィール画像</strong>
    <% if @user.image? %>
    <%= image_tag @user.image.url,size: '200x200'  %>
    <% end %>
  </p>
  <p>
  <strong>コメント</strong>
  <%= @user.content %>
  </p>
  <%= link_to 'プロフィール編集する', edit_user_path(@user) %>
